{% extends 'base.html.twig' %}

{% block title %}Liste de courses{% endblock %}

{% block body %}
    <!-- FORMULAIRE -->
    {{ form_start(formItem) }}

    {{ form_widget(formItem) }}
    <button class="mt-2" type="submit" class="btn btn-success">Valider</button>

    {{ form_end(formItem) }}

    <!-- TABLEAU -->
    <table class="table w-50 m-auto text-center">
        <thead class="thead-dark">
        <tr>
            <th>Libell√©</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {%  for item in items %}
            <tr>
                {% if item.isBuy == 1 %}
                    <td style="text-decoration:line-through">{{ item.libelle }}</td>
                {% endif %}
                {% if item.isBuy == 0 %}
                    <td>{{ item.libelle }}</td>
                {% endif %}
                <td>
                    <a href="{{ path('acheter', {id: item.id }) }}" class="btn btn-primary">Buy</a>
                    <a href="{{ path('supprimer',{id: item.id}) }}" class="btn btn-danger">Enlever</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
